{
  "name": "psycho-trainer-modern",
  "version": "3.0.0",
  "description": "Modern Telegram bot for AI-powered psychotherapy training",
  "main": "src/app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "psychotherapy",
    "claude",
    "training"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.53.0",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "node-telegram-bot-api": "^0.66.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
